<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.rentandride.Search">

    <TextView
        android:text="Search Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_marginTop="96dp"
        android:id="@+id/s_search" />

    <TextView
        android:text="Vehicle Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:textSize="15dp"
        android:id="@+id/s_vtype"
        android:layout_below="@+id/s_search"
        android:layout_alignStart="@+id/button" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/s_searchView"
        android:layout_below="@+id/s_search"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/s_vtype"
        android:layout_alignParentStart="true">
        <CheckBox
            android:text="Two-Wheeler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/s_t_w"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp" />

        <CheckBox
            android:text="Four-Wheeler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_f_w"
            android:layout_alignBaseline="@+id/checkBox"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>
</RelativeLayout>
